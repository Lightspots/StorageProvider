{
  "name": "@lightspots/storageprovider",
  "version": "2.0.0-beta.3",
  "description": "A simple API for accessing different Storages, including LocalStorage, SessionStorage and URL get parameters",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/Lightspots/StorageProvider",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "typedoc": "typedoc"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "storage",
    "localStorage",
    "sessionStorage"
  ],
  "author": "Lightspots GmbH - Grisu118",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.4",
    "jest-localstorage-mock": "^2.4.18",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.4",
    "typescript": "^4.4.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "testURL": "http://localhost/unitTest",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "jsdom"
  }
}
