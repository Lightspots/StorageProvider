{
  "name": "@lightspots/storageprovider",
  "version": "2.0.1",
  "description": "A simple API for accessing different Storages, including LocalStorage, SessionStorage and URL get parameters",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/Lightspots/StorageProvider",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "typedoc": "typedoc"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "storage",
    "localStorage",
    "sessionStorage"
  ],
  "author": "Lightspots GmbH - Grisu118",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^20.1.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-localstorage-mock": "^2.4.22",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.4",
    "typescript": "^5.0.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "testEnvironmentOptions": {
      "url": "http://localhost/unitTest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "jsdom"
  },
  "packageManager": "yarn@3.3.0"
}
